%html
  %head
    %title Unit 4 Login
    :css
      .label{text-align: right}
      .error{color: red}
  %body
    %h2 Login
    %form{:method => 'post', :name => 'form'}
      %table{:style => 'border: 1px'}
        %tr
          %td.label
            Username
          %td
            %input{:type => 'text', :name => 'username', :value => %Q{#{locals[:username]}}, :autofocus => true}
        %tr
          %td.label
            Password
          %td
            %input{:type => 'password', :name => 'password', :value => %Q{#{locals[:password]}}}

      .error
        %p
          = %Q{#{@invalid_login}}

      %input{:type => 'submit'}
